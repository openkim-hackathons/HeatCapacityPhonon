{
  "property-id" "tag:staff@noreply.openkim.org,2024-03-11:property/heat_capacity"

  "property-title" "Heat capacity of crystal"

  "property-description" "Heat capacity of a crystal calculated at constant pressure and constant volume.
  This is computed from two separate simulations (NPT and NVT) using kim-convergence for convergence verification."

;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
; CHANGE THE SECTION BELOW WHEN CREATING NEW PROPERTIES
;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;

  "average-wigner-seitz-radius" {
    "type"         "float"
    "has-unit"     true
    "extent"       [":"]
    "required"     true
    "description" "A vector of average Wigner-Seitz radii. he average Wigner-Seitz radius is defined as the radius of the sphere with volume equal to the volume of the unit cell divided by the number of atoms in the unit cell."
  }  
  
  "constant_volume_heat_capacity" {
    "type"         "float"
    "has-unit"     true
    "extent"       []
    "required"     true
    "description" "Constant volume phonon heat capacity of solid."
  }

  "constant_pressure_heat_capacity" {
    "type"         "float"
    "has-unit"     true
    "extent"       []
    "required"     true
    "description" "Constant pressure phonon heat capacity of solid"
  }

  "volume" {
    "type"          "float"
    "has_unit"      true
    "extent"        []
    "required"      true
    "description"   "Volume of system"
  }

  "pressure" {
    "type"          "float"
    "has_unit"      true
    "extent"        []
    "required"      true
    "description"   "Pressure of system"
  }

  "dulong_petit_law"{
    "type"          "float"
    "has_unit"      true
    "extent"        []
    "required"      true
    "description"   "Dulong-Petit limit for heat capacity of solid"
  }

;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
; END OF NEW FIELDS TO DEFINE
;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;

